#!/bin/bash

JOBID=`job vcat-toollabs-daemon`

# 2.5g is certainly required (example: tree for category "ドイツ" (Germany) on jawiki)
SGE_MEM="3g"

# Java should not need much
JAVA_MEM="256m"
JAVA_MEM_START=$JAVA_MEM

if [ -z "$JOBID" ]; then
	jstart -quiet -stderr -mem $SGE_MEM -o $HOME/vcat-toollabs-daemon.log -j y -N vcat-toollabs-daemon java -Xms$JAVA_MEM_START -Xmx$JAVA_MEM -jar $HOME/work/jar/vcat-toollabs.jar $HOME/work/vcat.properties
fi
